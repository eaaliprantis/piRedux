<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <Button
        android:id="@+id/addphoto"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:textColor="#F2F2F2"
        android:background="#68228B"
        android:textSize="24dp"
        android:text="Add Photo(s)" />
    <Button
        android:id="@+id/setResizeSettings"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:textColor="#F2F2F2"
        android:background="#5C246E"
        android:textSize="24dp"
        android:text="Set Resize" />
    <Button
        android:id="@+id/resizephotos"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:textColor="#F2F2F2"
        android:background="#FF5224"
        android:textSize="24dp"
        android:text="Resize Photo(s)" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4" >
                	
        	<TextView
        	    android:id="@+id/numPhotosView"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="0 photo(s)"
        	    android:gravity="center_horizontal|center_vertical|center"
        	    android:textSize="30sp"
        	    android:layout_weight="1.5"
		        android:textColor="#F2F2F2"
		        android:background="#5C246E" />
        	<TextView
        	    android:id="@+id/spaceView"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text=" "
        	    android:gravity="center_horizontal|center_vertical|center"
        	    android:textSize="30sp"
        	    android:layout_weight="1"
		        android:textColor="#F2F2F2"
		        android:background="#5C246E" />
        	<TextView 
        	    android:id="@+id/totalSizeView"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="0.00 MB"
        	    android:gravity="center_horizontal|center_vertical|center"
        	    android:textSize="30sp"
        	    android:layout_weight="1.5"
		        android:textColor="#F2F2F2"
		        android:background="#5C246E" />
    </LinearLayout>
        
</LinearLayout>
